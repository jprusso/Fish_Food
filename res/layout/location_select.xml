<?xml version="1.0" encoding="utf-8"?>

<ScrollView 
    	xmlns:android="http://schemas.android.com/apk/res/android"
  		android:layout_width="fill_parent"
  		android:layout_height="fill_parent" >

<RelativeLayout 
    	xmlns:android="http://schemas.android.com/apk/res/android"
   	 	android:layout_width="fill_parent"
    	android:layout_height="650dp"
    	android:orientation="vertical" 
    	android:background="#800000" >

    <TextView
        android:id="@+id/locations_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Dining Locations"
        android:textColor="#FFD700"
        android:textSize="40dp" />

    <Button
        android:id="@+id/ward_haffey_button"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_below="@+id/locations_label"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:textSize="22dp"
        android:text="Ward/Haffey Dining Hall" />

    <Button
        android:id="@+id/murphy_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ward_haffey_button"
        android:layout_alignRight="@+id/ward_haffey_button"
        android:layout_below="@+id/ward_haffey_button"
        android:layout_marginTop="20dp"
        android:textSize="22dp"
        android:text="Murphy Dining Hall" />

    <Button
        android:id="@+id/cyber_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/murphy_button"
        android:layout_alignRight="@+id/murphy_button"
        android:layout_below="@+id/murphy_button"
        android:layout_marginTop="20dp"
        android:textSize="22dp"
        android:text="Cyber Cafe&apos;" />

    <Button
        android:id="@+id/cardinal_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/cyber_button"
        android:layout_alignRight="@+id/cyber_button"
        android:layout_below="@+id/cyber_button"
        android:layout_marginTop="20dp"
        android:textSize="22dp"
        android:text="Cardinal Cafe&apos;" />

    <Button
        android:id="@+id/fishbowl_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/cardinal_button"
        android:layout_alignRight="@+id/cardinal_button"
        android:layout_below="@+id/cardinal_button"
        android:layout_marginTop="20dp"
        android:textSize="22dp"
        android:text="50&apos;s FishBowl" />

</RelativeLayout> 

</ScrollView>