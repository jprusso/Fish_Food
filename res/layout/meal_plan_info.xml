<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#800000" >

    <Button
        android:id="@+id/meal_costs"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignRight="@+id/textView2"
        android:layout_centerVertical="true"
        android:textSize="22dp"
        android:textColor="#000000"
        android:text="Meal Plan Costs" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/meal_costs"
        android:layout_centerHorizontal="true"
        android:text="**Information provided by SJFC&apos;s Bursar Office"
        android:textColor="#FFD700"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/meal_costs"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="28dp"
        android:text="**Information provided by SJFC&apos;s ResLife"
        android:textColor="#FFD700"
        android:textSize="13sp" />

    <Button
        android:id="@+id/meal_options"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_above="@+id/textView2"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignRight="@+id/textView2"
        android:textSize="22dp"
        android:textColor="#000000"
        android:text="Meal Plan Options" />

</RelativeLayout>